@model DataLayer.HomeLoginViewModel
@{
    ViewBag.Title = "Home Page";
    Layout = null;
}
<head>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Css/css")

</head>
<body class="hold-transition login-page">
    <div class="login-box">
        <div class="login-logo text-center">
            <a href="starter.html">
                <b>MesiMart Admin System</b>
            </a>
            <p class="text-center"></p>
          
           
        </div>
        <!-- /.login-logo -->
       
        <p class="login-box-msg">Sign IN </p>
        <div class="login-box-body">

            @using (Html.BeginForm("Index", "Login", FormMethod.Post))
            {
                <div class="form-group has-feedback">
                    @*<input type="text" class="form-control" placeholder="User Name">*@
                    @Html.TextBoxFor(m => m.UserId, new { id = "userId", name = "userId", placehonder = "User Id", @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.UserId)
                    <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                </div>
                    <div class="form-group has-feedback">
                        @Html.TextBoxFor(m => m.Password, new { id = "password", name = "password", placehonder = "Password", @class = "form-control", @type = "password" })
                        @Html.ValidationMessageFor(m => m.Password)
                        @*<input type="password" class="form-control" placeholder="Password">*@
                        <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                    </div>
                    <div class="row">
                        @*<div class="col-xs-12">
                                <div class="checkbox ">
                                    <label>
                                        <input type="checkbox"> Remember Me
                                    </label>
                                </div>
                            </div>*@
                        <!-- /.col -->
                        <div class="col-xs-3 pull-right no-padding" style="margin:0 15px 0 10px; ">
                            <input type="submit" value="Sign In" name="btnSaveType" class="btn bg-green" />
                        </div>

                        <!-- /.col -->
                    </div>




            }

        </div>
        <!-- /.login-box-body -->
    </div>
    <!-- /.login-box -->


</body>
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")

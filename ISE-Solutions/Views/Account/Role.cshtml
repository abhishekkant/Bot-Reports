                            </div>
                        </div>
                        <!-- _register.cshtml -->


                        <div class="box-body">
                            <br />
                            <div class="form-horizontal">
                                <div class="col-md-6">


                                    <div class="form-group">
                                        <label class="col-sm-4 control-label">Role:</label>
                                        <div class="col-sm-8">
                                            @*<input class="form-control" id="fristname" name="fristname" placeholder="Frist Name" type="text">*@
                                            @Html.TextBoxFor(m => m.RoleName, new { name = "RoleName", placeholder = "Role", @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.RoleName)
                                          
                                            @Html.Hidden("initialRoleName")
                                            @Html.HiddenFor(m=>m.RoleID)
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-4 control-label">Description:</label>
                                        <div class="col-sm-8">
                                            @*<input class="form-control" id="fristname" name="fristname" placeholder="Frist Name" type="text">*@
                                            @Html.TextAreaFor(m => m.Description, new { id = "Description", name = "Description", placeholder = "Description", @class = "form-control" })
                                           
                                        </div>
                                    </div>
                                 
                                    <div class="form-group">
                                        <label class="col-sm-4 control-label">Active:</label>
                                        <div class="col-sm-8">
                                            <div class="checkbox">
                                                <label>
                                                    @*<input type="checkbox"  name="active" id="active" checked="checked" value="1">*@
                                                    @Html.CheckBoxFor(m => m.IsActive, new { id = "active", name = "active", @checked = "checked" })

                                        </div>
                                    </div>

                                </div>
                                <!-- /.col -->
                                <div class="col-md-6">

                                </div>

                            </div>
                            <!-- /.col -->
                            <table class="table table-striped role-table" id="grid" data-source="@Url.Action("GetRoles","Account")"></table>
                        </div>
                        <!-- /.box-body -->

                    </div>

                </div>
            </div>
        }
    }

    @Styles.Render("~/Content/GridCss")
    @Scripts.Render("~/jscript/GridJs")
